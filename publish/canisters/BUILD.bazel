[
    gzip_compress(
        name = name + ".gz",
        srcs = [target],
    )
    for (name, target) in CANISTERS.items()
]

[
    sh_test(
        name = name + "_size_test",
        srcs = ["file_size_test.sh"],
        data = [target],
        env = {
            "FILE": "$(rootpath " + target + ")",
            "MAX_SIZE": CANISTERS_MAX_SIZE_IN_BYTES.get(
                name,
                CANISTERS_MAX_SIZE_IN_BYTES["default"],
            ),
        },
    )
    for (name, target) in CANISTERS.items()
]

