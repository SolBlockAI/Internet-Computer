load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")

rust_library(
    name = "lmdb_rkv",
    srcs = glob(["src/**"]),
    crate_name = "lmdb",
    edition = "2015",
    version = "0.14.99",
    visibility = ["//visibility:public"],
    deps = [
        "//lmdb-sys",
        "@crate_index//:bitflags",
        "@crate_index//:byteorder",
