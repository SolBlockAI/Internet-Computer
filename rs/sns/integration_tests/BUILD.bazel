rust_test_suite_with_extra_srcs(
    name = "integration_test",
    size = "large",
    srcs = glob(
        ["src/*.rs"],
        exclude = [
            "src/lib.rs",
        ],
    ),
    aliases = ALIASES,
    args = [
        "--test-threads",
        "7",
    ],
    crate_features = ["test"],
    data = DATA_DEPS,
    env = ENV,
    extra_srcs = [],
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
    tags = ["cpu:8"],
    deps = DEPENDENCIES_WITH_TEST_FEATURES + TEST_DEV_DEPENDENCIES,
)

rust_test_suite_with_extra_srcs(
    name = "long_bench",
    size = "enormous",
    srcs = ["src/swap.rs"],
    aliases = ALIASES,
    args = ["swap_load_test"],
    crate_features = [
        "test",
        "long_bench",
    ],
    data = DATA_DEPS,
    env = ENV,
    extra_srcs = ["src/lib.rs"],
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
