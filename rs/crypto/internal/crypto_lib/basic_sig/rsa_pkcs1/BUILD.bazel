load("@crate_index//:defs.bzl", "all_crate_deps")
load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test", "rust_test_suite")

package(default_visibility = ["//rs/crypto:__subpackages__"])

DEPENDENCIES = all_crate_deps() + [
    "//rs/crypto/internal/crypto_lib/basic_sig/der_utils",
    "//rs/crypto/sha2",
    "//rs/types/types",
    "//rs/crypto/getrandom_for_wasm",
]

MACRO_DEPENDENCIES = []

DEV_DEPENDENCIES = [
    "@crate_index//:hex",
    "@crate_index//:serde_json",
    "@crate_index//:wycheproof",
]

MACRO_DEV_DEPENDENCIES = []

ALIASES = {}

rust_library(
    name = "rsa_pkcs1",
    srcs = glob(["src/**"]),
    aliases = ALIASES,
    crate_name = "ic_crypto_internal_basic_sig_rsa_pkcs1",
    proc_macro_deps = MACRO_DEPENDENCIES,
    version = "0.8.0",
    deps = DEPENDENCIES,
)

rust_test(
    name = "rsa_pkcs1_test",
    aliases = ALIASES,
    crate = ":rsa_pkcs1",
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
    deps = DEPENDENCIES + DEV_DEPENDENCIES,
)

rust_test_suite(
    name = "rsa_pkcs1_integration",
    srcs = glob(["tests/**/*.rs"]),
    aliases = ALIASES,
    compile_data = glob(["tests/data/*"]),
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
    deps = [":rsa_pkcs1"] + DEPENDENCIES + DEV_DEPENDENCIES,
)
