rust_test(
    name = "obs_canister_clients_test",
    aliases = ALIASES,
    crate = ":obs_canister_clients",
    edition = "2021",
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
