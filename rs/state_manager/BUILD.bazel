load("@crate_index//:defs.bzl", "all_crate_deps")
load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")
load("//bazel:defs.bzl", "rust_bench")

package(default_visibility = ["//visibility:public"])

rust_library(
    name = "state_manager",
    srcs = glob(["src/**"]),
    crate_features = select({
        "//bazel:malicious_code_enabled": ["malicious_code"],
        "//conditions:default": [],
    }),
    crate_name = "ic_state_manager",
    version = "0.8.0",
    deps = all_crate_deps() + [
        "//rs/canonical_state",
        "//rs/canonical_state/tree_hash",
        "//rs/config",
        "//rs/crypto/sha2",
        "//rs/crypto/tree_hash",
        "//rs/interfaces",
        "//rs/interfaces/certified_stream_store",
        "//rs/interfaces/state_manager",
        "//rs/monitoring/logger",
        "//rs/monitoring/metrics",
        "//rs/protobuf",
        "//rs/registry/routing_table",
        "//rs/registry/subnet_type",
        "//rs/replicated_state",
        "//rs/state_layout",
        "//rs/sys",
        "//rs/tree_deserializer",
        "//rs/types/base_types",
        "//rs/types/error_types",
        "//rs/types/types",
        "//rs/utils",
    ],
)

rust_test(
    name = "state_manager_lib_tests",
    timeout = "long",
    crate = ":state_manager",
    deps = [
        "//rs/registry/routing_table",
        "//rs/registry/subnet_features",
        "//rs/registry/subnet_type",
        "//rs/test_utilities",
        "//rs/test_utilities/logger",
        "//rs/test_utilities/tmpdir",
        "//rs/types/error_types",
        "//rs/types/ic00_types",
        "//rs/types/wasm_types",
        "@crate_index//:assert_matches",
        "@crate_index//:maplit",
        "@crate_index//:proptest",
        "@crate_index//:strum",
        "@crate_index//:tempfile",
    ],
)

