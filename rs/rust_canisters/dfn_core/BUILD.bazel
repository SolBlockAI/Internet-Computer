load("@rules_rust//rust:defs.bzl", "rust_doc_test", "rust_library", "rust_test")
load("//bazel:canisters.bzl", "rust_canister")

package(default_visibility = ["//visibility:public"])

DEPENDENCIES = [
    "//rs/rust_canisters/on_wire",
    "//rs/types/base_types",
]

MACRO_DEPENDENCIES = []

DEV_DEPENDENCIES = [
    "//rs/rust_canisters/canister_test",
    "//rs/rust_canisters/dfn_json",
]

MACRO_DEV_DEPENDENCIES = []

ALIASES = {}

rust_library(
    name = "dfn_core",
    srcs = glob(["src/**"]),
    aliases = ALIASES,
    crate_name = "dfn_core",
    proc_macro_deps = MACRO_DEPENDENCIES,
    version = "0.9.0",
    deps = DEPENDENCIES,
)

rust_canister(
    name = "wasm",
    srcs = ["test/wasm.rs"],
    aliases = ALIASES,
    proc_macro_deps = MACRO_DEPENDENCIES,
    service_file = ":test/wasm.did",
    deps = DEPENDENCIES + [":dfn_core"],
)

rust_test(
    name = "dfn_core_test",
    aliases = ALIASES,
    crate = ":dfn_core",
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
    deps = DEPENDENCIES + DEV_DEPENDENCIES,
)

rust_test(
    name = "dfn_core_integration_test",
    srcs = ["test/test.rs"],
    aliases = ALIASES,
    crate_root = "test/test.rs",
    data = [
        ":wasm",
        "//rs/canister_sandbox",
        "//rs/canister_sandbox/sandbox_launcher",
    ],
    env = {
        "CARGO_MANIFEST_DIR": "rs/rust_canisters/dfn_core",
        "WASM_WASM_PATH": "$(rootpath :wasm)",
        "LAUNCHER_BINARY": "$(rootpath //rs/canister_sandbox/sandbox_launcher)",
        "SANDBOX_BINARY": "$(rootpath //rs/canister_sandbox)",
    },
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
    deps = DEPENDENCIES + DEV_DEPENDENCIES + [":dfn_core"],
)

rust_doc_test(
    name = "dfn_core_doc_test",
    crate = ":dfn_core",
    deps = [
        "//rs/rust_canisters/dfn_json",
    ],
)
